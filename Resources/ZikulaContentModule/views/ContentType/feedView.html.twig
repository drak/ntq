<div class="content-feed">
    <h3><a href="{{ feed.permalink|e('html_attr') }}" title="{{ feed.title|e('html_attr') }}">{#{ feed.title }#}{% if app.request.locale == 'de' %}Fragen mit dem Tag zikula{% else %}Questions tagged with zikula{% endif %}</a></h3>
    {#% if feed.description %}
        <p>{{ feed.description }}</p>
    {% endif %#}
    {% if feed.items|length > 0 %}
        <div class="list-group">
            {% for item in feed.items %}
                <a href="{{ item.permalink|e('html_attr') }}" title="{{ item.title|e('html_attr') }}" class="list-group-item">
                    {% if includeContent %}
                        <h4 class="list-group-item-heading">{{ item.title }}</h4>
                        {% if item.description %}
                            <p class="list-group-item-text">
                                {{ item.description }}
                            </p>
                        {% endif %}
                    {% else %}
                        {{ item.title }}
                    {% endif %}
                </a>
            {% endfor %}
        </div>
    {% endif %}
</div>
