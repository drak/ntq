<!DOCTYPE html>
<html lang="{{ app.request.locale }}" dir="auto">
    <head>
        <meta charset="{{ pagevars.meta.charset }}" />
{% set sitename = getModVar('ZConfig', 'sitename') %}
        <title>{{ pagevars.title }}{% if sitename not in pagevars.title %} - {{ sitename }}{% endif %}</title>
        <meta name="description" content="{{ pagevars.meta.description }}" />
        <meta name="keywords" content="{{ pagevars.meta.keywords }}" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link href="{{ zasset('@ZikulaZkSiteTheme:images/favicon.ico') }}" rel="shortcut icon" />
        <link rel="icon" href="{{ zasset('@ZikulaZkSiteTheme:images/favicon.ico') }}" type="image/ico" />
        <link href="https://fonts.googleapis.com/css?family=Lato" rel="stylesheet">
        <link rel="alternate" type="application/rss+xml" title="Zikula RSS News" href="{{ url('munewsmodule_message_view', {sort: 'updatedDate', sortdir: 'desc', '_format': 'rss'}) }}" />
        {{ pageAddAsset('javascript', zasset('@ZikulaZkSiteTheme:js/jquery.matchHeight/jquery.matchHeight-min.js')) }}
        {{ pageAddAsset('javascript', asset('magnific-popup/jquery.magnific-popup.min.js')) }}
        {{ pageAddAsset('stylesheet', asset('magnific-popup/magnific-popup.css')) }}
        {{ pageAddAsset('stylesheet', zasset('@ZikulaZkSiteTheme:css/zikula-font/zikula.css')) }}
    </head>
